" ブラウザタイトルをFirefoxに
set titlestring=Firefox

" 検索で大文字小文字を無視
set ignorecase

" アドオンとナビゲーションを非表示
set toolbars=noaddons,nomenu

" ヒント文字列にアルファベットを使用
set hintchars=yuiopnm

" 履歴の非表示
set complete=s

" j/kでのスクロール幅
map j 3<C-e>
map k 3<C-y>

" C-aを有効化
imap <C-a> <Insert><C-a><Insert>

" C-cを有効化
map <C-c> :echo Yank!<CR>Y

" 読み込みを出力
echo ".vimperatorrc was loaded!"
